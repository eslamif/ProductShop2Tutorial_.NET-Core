@model Category

@{ 
    ViewBag.Title = "Delete Category";
}

<h1>Confirm Deletion</h1>
<h3>Are you sure you want to delete @Model.Name?</h3>

<form asp-controller="Category" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryID" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Category" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
