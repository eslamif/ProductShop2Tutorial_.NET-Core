@model Category

@{
    ViewBag.Title = ViewBag.Action + "Category";
}

<h1>@ViewBag.Title</h1>

<form asp-controller="Category" asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="CategoryID" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Category" asp-action="List" class="btn btn-primary">Cancel</a>
</form>